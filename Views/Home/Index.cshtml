@page "/"
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web
@inject NavigationManager Navigation

<h1 class="display-4 text-center mt-5">Welcome to Student Management</h1>
<p class="lead text-center">Effortlessly manage your students with our simple and powerful web app.</p>

<div class="text-center mt-4">
    <button class="btn btn-success btn-lg mx-2">
        <a class="nav-link text-light" asp-area="" asp-controller="Students" asp-action="Add"> ➕ Add Student</a>
    </button>
    <button class="btn btn-primary btn-lg mx-2">
        <a class="nav-link text-light" asp-area="" asp-controller="Students" asp-action="List"> 📋 View Students</a>
    </button>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4 text-center">
            <h3 class="mt-3">Add New Students</h3>
            <p>Quickly add students to your database.</p>
        </div>
        <div class="col-md-5 text-center">
            <h3 class="mt-3">Manage Students</h3>
            <p>View and edit student records with ease.</p>
        </div>
    </div>
</div>